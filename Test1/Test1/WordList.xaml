<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Test1.WordList"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add/Update" Clicked="AddOrUpdate_Clicked" />
        <ToolbarItem Text="Del" Clicked="Del_Clicked" />
        
        <ToolbarItem Text="Profile" Clicked="Profile_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ListView x:Name="listView"
              
              SelectionMode="Single"
              Margin="20">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation = "Horizontal" Margin = "10,10,10,10">
                        <Image Source="{Binding WordPicturePath}" />
                        <Label  Text="{Binding WordEng}"/>
                        <Label  Text="{Binding WordRus}"/>
                        <Label  Text="{Binding WordNote}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>